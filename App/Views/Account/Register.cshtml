@model App.Models.User
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <div class="row h-100 justify-content-center align-items-center">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "bg-secondary  w-25 p-3  row h-100 justify-content-center align-items-center", role = "form" }))
        {<div class="navbar navbar-inverse navbar-fixed-top">
                <h2>Registration</h2>
                <div class="validation" asp-validation-summary="All"></div>
                <div class="form-group">
                    <div>
                        <label asp-for="Email">Input Email</label><br />
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                        <span class="text-danger">  @Html.ValidationMessageFor(x => x.Email)</span>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="Password">Input password</label><br />
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                        <span class="text-danger">  @Html.ValidationMessageFor(x => x.Password)</span>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="ConfirmPassword">Confirm password</label><br />
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Password" })
                        <span class="text-danger">  @Html.ValidationMessageFor(x => x.ConfirmPassword)</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">
                            Registration
                        </button>
                    </div>
                </div>

            </div>}

    </div>
</body>
</html>


